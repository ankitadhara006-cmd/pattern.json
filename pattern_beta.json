{
  // =========================================================
  // PATTERN CONFIG (safest defaults active; alternatives commented)
  // Notes:
  // - Comments (// ...) are for your understanding; your loader tolerates them.
  // - Switch ON parallel by setting parallel.enabled = true.
  // - Set sendFormat="user" to let your UI (HTML checkbox) decide.
  // =========================================================

  // 1) MIME LAYOUT — safest general-purpose is multipart/mixed
  "mimeLayout": "mixed",
  // "mimeLayout": "alternative", // safer when sending both plain+html without attachments
  // "mimeLayout": "related",     // for HTML with inline images (cid:)
  // "mimeLayout": "nested",      // advanced layouts (mixed containing alternative, etc.)
  // "mimeLayout": "encrypted",   // only if you actually encrypt
  // "mimeLayout": "random",      // rotates among pool (set mimeLayoutPool below)

  // Used only when mimeLayout = "random"
  "mimeLayoutPool": [],

  // 2) SEND FORMAT — who chooses plain vs html?
  "sendFormat": "user",
  // "sendFormat": "plain",       // force plain text always
  // "sendFormat": "html",        // force HTML always

  // 3) ENCODING for TEXT parts — quoted-printable is safe & readable
  "encoding": "quoted-printable",
  // "encoding": "7bit",          // minimal, only ASCII
  // "encoding": "8bit",          // allows UTF-8 but some MTAs normalize it
  // "encoding": "base64",        // larger, opaque; not ideal for text readability

  // 4) MIME BOUNDARY STRINGS
  "boundaryStyle": "default",
  // "boundaryStyle": "guid",
  // "boundaryStyle": "nextpart",
  // "boundaryStyle": "customprefix",
  "boundaryPrefix": "----boundary_",
  "boundaryHexLen": 24,

  // 5) SUBJECT PREFIX & CASE
  "subjectPrefix": "",
  // "subjectPrefix": "RE:",      // example
  "subjectCase": "as-is"
  // "subjectCase": "title",
  // "subjectCase": "upper",
  // "subjectCase": "lower",

  , // <— keep this comma because more top-level keys continue below

  // 6) DATE & MESSAGE-ID
  "dateMode": "current",
  // "dateMode": "random-recent", // if you ever simulate recent past
  "messageId": "generated"
  // "messageId": "none",         // only if you set it elsewhere

  , // <— keep this comma

  // 7) LIST-UNSUBSCRIBE & EXTRA HEADERS
  "listUnsubscribeMode": "both",
  // "listUnsubscribeMode": "mailto",
  // "listUnsubscribeMode": "https",
  // "listUnsubscribeMode": "none",
  "xHeaders": {
    "precedence": false,          // UI toggle controls precise value if true
    "xPriority": false,           // UI dropdown controls exact value if true
    "contentLanguage": true,      // adds: Content-Language: en
    "xContentTypeOptions": true   // adds: X-Content-Type-Options: nosniff
  },

  // 8) OPTIONAL OPEN TRACKING (your code already guards failures)
  "tracking": {
    "openPixel": true
    // "pixelBaseUrl": "https://your-edge-function/open" // if you need to override
  },

  // 9) THROTTLING / HUMANIZATION (sequential mode mainly)
  "timing": {
    "perEmailDelayMs": { "min": 0, "max": 0 },            // keep 0–0 for parallel tests
    "longPauseEvery":  { "min": 35, "max": 60 },          // used by your sequential flow
    "longPauseDurationMs": { "min": 15000, "max": 35000 } // 15–35 sec long pause
  },

  // 10) PDF/JPG METADATA HANDLING
  "pdfMetadata": {
    "mode": "strip"
    // "mode": "human-like"       // if you enable your human-like metadata feature
  },

  // 11) ATTACHMENT NAMING (your app handles actual template)
  "attachmentName": {
    "case": "preserve"             // or "upper" / "lower"
    // "prefix": ""                // UI provides prefix; placeholders supported in app
  },

  // 12) PARALLEL SENDING (NEW)
  "parallel": {
    "enabled": false,              // ← set true to enable parallel
    "workers": 3,                  // how many at a time (code caps to 8)
    "perWorkerDelayMs": { "min": 150, "max": 600 } // tiny jitter to smooth CPU/API
  }

  // =========================================================
  // End of config. Ensure exactly one closing brace below.
  // =========================================================
}
