{
  // === MIME Layout Options ===
  // Only ONE should be active (uncomment it)
  // These are the common, real-world layouts you’ll see in email clients and MTAs.

  "mimeLayout": "plain"         // = Only plain text (safest, no HTML)

  // "mimeLayout": "html"        // = Only HTML body (no plain fallback)

  // "mimeLayout": "alternative" // = multipart/alternative (plain + HTML). Most common for normal emails.

  // "mimeLayout": "mixed"       // = multipart/mixed → body part(s) + attachments. Default when adding files.

  // "mimeLayout": "nested"      // = multipart/mixed → multipart/alternative (plain + HTML). 
                                //   Classic "pro" structure: both body formats + attachments.

  // "mimeLayout": "related"     // = multipart/related (HTML + inline images, like logos or CSS resources)

  // "mimeLayout": "digest"      // = multipart/digest (sequence of multiple messages, e.g. mailing lists)

  // "mimeLayout": "report"      // = multipart/report (used for DSN/bounce messages with status + original)

  // "mimeLayout": "signed"      // = multipart/signed (body + digital signature, e.g. PGP or S/MIME)

  // "mimeLayout": "encrypted"   // = multipart/encrypted (PGP/S-MIME encrypted message container)
}
