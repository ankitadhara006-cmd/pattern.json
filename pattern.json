{
  // =========================================================
  // MESSAGE STRUCTURE
  // Attachments always present → outer = mixed.
  // Your sender should place a multipart/alternative (plain + minimal HTML)
  // as the FIRST child of mixed whenever openTracking=true.
  // =========================================================
  "mimeLayout": "mixed",
  // "mimeLayoutPool": ["alternative", "mixed", "related"],

  // =========================================================
  // ENCODING
  // Keep quoted-printable for text parts (safe for UTF-8 & diacritics).
  // Attachments remain base64 automatically by your app.
  // =========================================================
  "encoding": "quoted-printable",
  // "encoding": "7bit",
  // "encoding": "8bit",
  // "encoding": "base64",

  // =========================================================
  // BOUNDARY STRINGS
  // Randomized boundary style reduces fingerprinting of the MIME shell.
  // =========================================================
  "boundaryStyle": "random",           // will shuffle among guid/nextpart/customprefix
  "boundaryPrefix": "----boundary_",   // used if style resolves to customprefix
  "boundaryHexLen": 24,                // used by nextpart/customprefix

  // =========================================================
  // SUBJECT & FROM
  // Calm, human-like subjects tend to inbox better than SHOUTY ones.
  // Avoid deceptive "Re:" / "FW:" for deliverability.
  // =========================================================
  "subjectCase": "as-is",
  "subjectPrefix": "random",           // pool includes mostly empty; see app's defaults
  // Safer pool suggestion inside your app’s code/config:
  // ["", "", "", "[Update]", "[Notice]"]  // 60% empty, light brackets sometimes

  "fromFormat": "first-last",          // Human-like presentation
  "fromNameMode": "stickyPerAccount",  // Keeps identity stable per account

  // =========================================================
  // TIMING / FLOW
  // Gentle jitter + occasional pauses → less “bot-like” bursts.
  // Tweak to your throughput needs; this is a balanced default.
  // =========================================================
  "timing": {
    "perEmailDelayMs": { "min": 50, "max": 150 },
    "longPauseEvery":  { "min": 35,  "max": 60   },
    "longPauseDurationMs": { "min": 10000, "max": 15000 }
  },

  // =========================================================
  // BODY LINE STYLE
  // Keep it simple; wrapping at 76 chars looks like classic MUAs.
  // If your body is very short or already wrapped, "none" is fine too.
  // =========================================================
  "bodyLineStyle": "wrap-76",
  // "bodyLineStyle": "none",
  // "bodyLineStyle": "wrap-80",
  // "bodyLineStyle": "pad-spaces",
  // "bodyLineStyle": "pad-tabs",
  // "bodyLineStyle": "html-comments",

  // =========================================================
  // ATTACHMENT NAMING
  // Several patterns make filenames look natural & varied.
  // Your app picks from this ARRAY (randomly if supported).
  // =========================================================
  "attachmentNamePatterns": [
    "{PREFIX}-{DATE}-{RAND10}.{EXT}",
    "Invoice_{NUM6}.{EXT}",
    "{DATE}_Report_{GUID8}.{EXT}",
    "{PREFIX}_{RAND10}.{EXT}"
  ],
  "attachmentExtensionCase": "lower",
  // "attachmentExtensionCase": "random",
  // "attachmentExtensionCase": "upper",
  // "attachmentExtensionCase": "preserve"

  // =========================================================
  // OPEN TRACKING
  // Keep true → inner HTML part stays minimal (text mirrored + 1x1 pixel).
  // =========================================================
  "openTracking": true
}
