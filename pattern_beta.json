{
  // =========================================================
  // PATTERN CONFIG (safest defaults active; alternatives commented)
  // =========================================================

  // 1) MIME LAYOUT
  "mimeLayout": "mixed",
  // "mimeLayout": "alternative",
  // "mimeLayout": "related",
  // "mimeLayout": "nested",
  // "mimeLayout": "encrypted",
  // "mimeLayout": "random",

  // Used only when mimeLayout = "random"
  "mimeLayoutPool": [],

  // 2) ENCODING for TEXT parts
  "encoding": "quoted-printable",
  // "encoding": "7bit",
  // "encoding": "8bit",
  // "encoding": "base64",
  // "encoding": "random",

  // 3) MIME BOUNDARY STRINGS
  "boundaryStyle": "default",
  // "boundaryStyle": "guid",
  // "boundaryStyle": "nextpart",
  // "boundaryStyle": "customprefix",
  "boundaryPrefix": "----boundary_",
  "boundaryHexLen": 24,

  // 4) SUBJECT PREFIX & CASE
  "subjectPrefix": "",
  // "subjectPrefix": "[Notice]",
  // "subjectPrefix": "[Update]",
  // "subjectPrefix": "[Invoice]",
  // "subjectPrefix": ["[Notice]", "[Update]", "[Invoice]"],
  // "subjectPrefix": "random",
  // "subjectPrefixPool": ["[Notice]", "[Update]", "[Invoice]"],

  "subjectCase": "as-is",
  // "subjectCase": "upper",
  // "subjectCase": "lower",
  // "subjectCase": "title",

  // 5) FROM DISPLAY NAME formatting & rotation
  "fromFormat": "last-first",
  // "fromFormat": "as-is",
  // "fromFormat": "first-last",
  // "fromFormat": "initial-dot",
  // "fromFormat": "team",

  "fromNameMode": "perEmail",
  // "fromNameMode": "stickyPerAccount",
  // "fromNameMode": "random",

  // 6) TIMING / BATCH FLOW
  "timing": {
    "perEmailDelayMs":      { "min": 0, "max": 0 },
    "longPauseEvery":       { "min": 40, "max": 60 },
    "longPauseDurationMs":  { "min": 7000, "max": 15000 }
  },

  // 7) BODY LINE WRAPPING / WHITESPACE
  "bodyLineStyle": "none",
  // "bodyLineStyle": "wrap-76",
  // "bodyLineStyle": "wrap-80",
  // "bodyLineStyle": "pad-spaces",
  // "bodyLineStyle": "pad-tabs",
  // "bodyLineStyle": "html-comments",

  // 8) ATTACHMENT FILE NAME STYLE
  "attachmentNamePatterns": ["{DATE}_Report_{GUID8}.{EXT}"],
  // "attachmentNamePatterns": ["{PREFIX}-{DATE}-{RAND10}.{EXT}"],
  // "attachmentNamePatterns": ["{PREFIX}_{RAND10}.{EXT}"],
  // "attachmentNamePatterns": ["DOC_{RAND10}.{EXT}"],

  "attachmentExtensionCase": "lower",
  // "attachmentExtensionCase": "preserve",
  // "attachmentExtensionCase": "upper",
  // "attachmentExtensionCase": "random",

  // 9) OPEN TRACKING
  "openTracking": false,

  // 10) PLAIN/HTML PART ORDER
  "plainHtmlOrder": "fixed",
  // "plainHtmlOrder": "flip",
  // "plainHtmlOrder": "random",

  // 11) LIST-UNSUBSCRIBE
  "listUnsubscribeMode": "none",
  // "listUnsubscribeMode": "mailto",
  // "listUnsubscribeMode": "https",
  // "listUnsubscribeMode": "both",

  // 12) MESSAGE-ID CONTROLS
  "messageIdMode": "off",
  // "messageIdMode": "custom-domain",
  "messageIdDomain": "gmail.com", // used only if messageIdMode = "custom-domain"

  // 13) DATE HEADER CONTROL
  "dateMode": "off",
  // "dateMode": "fixed",
  // "dateMode": "offset",
  "dateFixed": "2025-09-26T13:45:00Z",
  "dateOffsetSeconds": 0,
  "dateFormat": "r",

  // 14) SEND FORMAT OVERRIDE
  // user  -> honor UI checkbox
  // html  -> force HTML (ignore checkbox)
  // plain -> force Plain Text (ignore checkbox)
  "sendFormat": "plain",

  // 15) PDF METADATA â€” preferred ExifTool schema (ACTIVE)
  // "pdfMetadata": {"mode": "off"},
  "pdfMetadata": {"mode": "strip"}
  // "pdfMetadata": {
  //   "mode": "strip-then-set",
  //   "properties": {
  //     "title": "Report {DATE}",
  //     "author": "{SENDER}",
  //     "subject": "Report for {EMAIL}",
  //     "creator": "iMailer 7.0",
  //     "producer": "wkhtmltopdf",
  //     "keywords": ["report", "{EMAIL}"],
  //     "custom": {
  //       "ReportId": "{NUM8}",
  //       "Recipient": "{EMAIL}"
  //     }
  //   }
  // }
}
