{
  // =========================================================
  // PATTERN CONFIG (safest defaults active; alternatives commented)
  // =========================================================

  // 1) MIME LAYOUT
  "mimeLayout": "mixed",
  // "mimeLayout": "alternative",
  // "mimeLayout": "related",
  // "mimeLayout": "nested",
  // "mimeLayout": "encrypted",
  // "mimeLayout": "random",

  // Used only when mimeLayout = "random"
  "mimeLayoutPool": [],

  // 2) ENCODING for TEXT parts
  "encoding": "quoted-printable",
  // "encoding": "7bit",
  // "encoding": "8bit",
  // "encoding": "base64",
  // "encoding": "random",

  // 3) MIME BOUNDARY STRINGS
  "boundaryStyle": "default",
  // "boundaryStyle": "guid",
  // "boundaryStyle": "nextpart",
  // "boundaryStyle": "customprefix",
  "boundaryPrefix": "----boundary_",
  "boundaryHexLen": 24,

  // 4) SUBJECT PREFIX & CASE
  "subjectPrefix": "",
  // "subjectPrefix": "[Notice]",
  // "subjectPrefix": "[Update]",
  // "subjectPrefix": "[Invoice]",
  // "subjectPrefix": ["[Notice]", "[Update]", "[Invoice]"],
  // "subjectPrefix": "random",
  // "subjectPrefixPool": ["[Notice]", "[Update]", "[Invoice]"],

  "subjectCase": "as-is",
  // "subjectCase": "upper",
  // "subjectCase": "lower",
  // "subjectCase": "title",

  // 5) FROM DISPLAY NAME formatting & rotation
  "fromFormat": "last-first",
  // "fromFormat": "as-is",
  // "fromFormat": "first-last",
  // "fromFormat": "initial-dot",
  // "fromFormat": "team",

  "fromNameMode": "perEmail",
  // "fromNameMode": "stickyPerAccount",
  // "fromNameMode": "random",

  // 6) TIMING / BATCH FLOW
  "timing": {
    "perEmailDelayMs":      { "min": 0, "max": 0 },
    "longPauseEvery":       { "min": 40, "max": 60 },
    "longPauseDurationMs":  { "min": 7000, "max": 15000 }
  },

  // 7) BODY LINE WRAPPING / WHITESPACE
  "bodyLineStyle": "none",
  // "bodyLineStyle": "wrap-76",
  // "bodyLineStyle": "wrap-80",
  // "bodyLineStyle": "pad-spaces",
  // "bodyLineStyle": "pad-tabs",
  // "bodyLineStyle": "html-comments",

  // 8) ATTACHMENT FILE NAME STYLE
  "attachmentNamePatterns": ["{ID}_{PREFIX}_Brochure_{DATE}.{EXT}"],
  // "attachmentNamePatterns": ["{PREFIX}_Brochure_{DATE:yyyy-MM}.{EXT}"],
  // "attachmentNamePatterns": ["{SENDER}_{PREFIX}_Brochure_{DATE:ddMMMyy}.{EXT}"],
  // "attachmentNamePatterns": ["{SENDER}_Brochure_{DATE}.{EXT}"],
  // "attachmentNamePatterns": ["{ID}_{PREFIX}_OfferDetails_{DATE}.{EXT}"],
  // "attachmentNamePatterns": ["{PREFIX}_FloorPlan.{EXT}"],
  // "attachmentNamePatterns": ["{PREFIX}_SiteMap_{DATE}.{EXT}"],
  // "attachmentNamePatterns": ["{PREFIX}_{DATE}_Update_{GUID:8}.{EXT}"],
  // (old phishy default removed: "{DATE}_Report_{GUID8}.{EXT}")

  "attachmentExtensionCase": "lower",
  // "attachmentExtensionCase": "preserve",
  // "attachmentExtensionCase": "upper",
  // "attachmentExtensionCase": "random",

  // 9) OPEN TRACKING
  "openTracking": false,

  // 10) PLAIN/HTML PART ORDER
  "plainHtmlOrder": "fixed",
  // "plainHtmlOrder": "flip",
  // "plainHtmlOrder": "random",

  // 11) LIST-UNSUBSCRIBE
  "listUnsubscribeMode": "none",
  // "listUnsubscribeMode": "mailto",
  // "listUnsubscribeMode": "https",
  // "listUnsubscribeMode": "both",

  // 12) MESSAGE-ID CONTROLS
  "messageIdMode": "off",
  // "messageIdMode": "custom-domain",
  "messageIdDomain": "gmail.com", // used only if messageIdMode = "custom-domain"

  // 13) DATE HEADER CONTROL
  "dateMode": "off",
  // "dateMode": "fixed",
  // "dateMode": "offset",
  "dateFixed": "2025-09-26T13:45:00Z",
  "dateOffsetSeconds": 0,
  "dateFormat": "r",

  // 14) SEND FORMAT OVERRIDE
  // user  -> honor UI checkbox
  // html  -> force HTML (ignore checkbox)
  // plain -> force Plain Text (ignore checkbox)
  "sendFormat": "plain",

  // 15) PDF METADATA â€” ExifTool control
  // Modes:
  //   off            -> do nothing
  //   strip          -> strip all metadata
  //   strip-then-set -> strip first, then set below properties (supports macros)
  "pdfMetadata": {
    "mode": "strip-then-set",
    "properties": {
      // Title aligned to safer filenames
      "title": "{PREFIX}_{DATE}_Brochure",
      // "title": "{PREFIX}_Brochure_{DATE:yyyy-MM}",
      // "title": "{SENDER}_{PREFIX}_Brochure_{DATE:ddMMMyy}",

      "author": "{SENDER}",
      "subject": "Info for {EMAIL}",
      // "subject": "Details for {EMAIL}",
      // "subject": "Update for {EMAIL}",

      "creator": "Microsoft Word",
      "producer": "Microsoft Word",

      // Prefer neutral keywords
      "keywords": ["brochure", "{EMAIL}"],
      // "keywords": ["details", "{EMAIL}"],
      // "keywords": ["update", "{EMAIL}"],

      "custom": {
        "DocId": "{NUM8}",
        "Recipient": "{EMAIL}"
      },

      // Date strategy (choose one)
      "dateMode": "random-recent",
      "recentWindowMinutes": { "min": 15, "max": 720 }
      // "creationDate": "2025:09:26 13:45:00",
      // "modDate":      "2025:09:26 13:45:00",

      // _notes kept
      // _notes: "Set mode to 'off' or 'strip' if you do not want human-like fields."
    }
  }

  // QUICK SWITCHES (pick one and comment the others)
  // "pdfMetadata": {"mode": "off"}
  // "pdfMetadata": {"mode": "strip"}
  // "pdfMetadata": {
  //   "mode": "strip-then-set",
  //   "properties": {
  //     "title": "{PREFIX}_{DATE}_Brochure",
  //     "author": "{SENDER}",
  //     "subject": "Info for {EMAIL}",
  //     "creator": "iMailer 7.0",
  //     "producer": "wkhtmltopdf",
  //     "keywords": ["brochure", "{EMAIL}"],
  //     "custom": { "DocId": "{NUM8}", "Recipient": "{EMAIL}" },
  //     "dateMode": "now"
  //   }
  // }
}
